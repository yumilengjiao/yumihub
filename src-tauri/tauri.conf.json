{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "YumiHub",
  "version": "../package.json",
  "identifier": "io.github.yumilengjiao.yumihub",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "yumihub",
        "width": 1100,
        "height": 700,
        "minWidth": 900,
        "minHeight": 650,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$LOCALDATA/**",
          "$RESOURCE/**"
        ]
      },
      "capabilities": [
        "desktop",
        "dialog",
        "event",
        "fs",
        "hotkey",
        "log",
        "net",
        "notification",
        "shell",
        "tray",
        "window"
      ],
      "csp": "default-src 'self'; connect-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: https://asset.localhost http://asset.localhost data: blob: *;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
